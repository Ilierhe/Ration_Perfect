                    android:textSize="16sp"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/br" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Пятый приём пищи"
            android:textColor="#E91E63"
            android:textSize="19sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/pp11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Горбуша отварная"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/p11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/pp12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Салат руккола \nс помидорами"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/p12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>
            </TableRow>

        </TableLayout>

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/br" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Шестой приём пищи"
            android:textColor="#E91E63"
            android:textSize="19sp" />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="40dp">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/pp13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Йогурт питьевой"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>

                <TextView
                    android:id="@+id/p13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:textSize="16sp"/>
            </TableRow>

        </TableLayout>
    </LinearLayout>
</ScrollView>